<STYLE type="text/css">
#theform {
	background-color: #f7f4ee;
	width: 27em;
	height: 19em;
	text-align: left;
	line-height: 1em;
	font: 90% Verdana, Tahoma, Arial, sans-serif;
	border: 1px solid #ddd;   
}
#theform a {
	color: #c3531b;
}
#theform fieldset {
	height: 10.5em;
	width: 16.3em;
	border: none;
	margin: 0em 0 0 0;
	padding: 1.5em 0 1em 2.5em;
	float: left;
}
#theform fieldset div.help {
	color: #9b978f;
	font-size: 1em;
	font-weight: normal;
	height: 6em;
	border: none;
}
#theform fieldset h3 {
	height: 1.5em;
	font-size: 1.7em;
	color: #523a0b;
	line-height: 1em;
}
#theform fieldset label {
	font-size: 1em;
	display: block;
	line-height: 1.8em;
}
#theform fieldset input {
	font-size: 1em;
	height: 1.4em;
	width: 20em;
}
/* Part 4 Styling */
#theform #pt4 input {
	height: 2.2em;
	font-size: 1.3em;
	width: 9em;
	color: #333333;
	background: #f3f3f3;
	font-weight: bold;
	border-bottom: 1px solid #999999;
	border-right: 1px solid #999999;
	border-top: 1px solid #CCCCCC;
	border-left: 1px solid #CCCCCC;
	float: left;
}
<!--
[if IE]> #theform #pt4 {
padding: 2em 1em 1em 1em;
}
<![endif]
-->
</STYLE>
<div id="col1" align="right">
  <div id="theform" align="right">
    <form id="login" action="/"  method="post">
      <fieldset id="pt1">
      <h3><%=l(:label_please_login)%></h3>
      <label for="user"><%=l(:field_user)%></label>
      <input class="required" id="login" name="login" type="text" tabindex="1"  />
      <label for="password"><%=l(:field_password)%></label>
      <input class="required" id="password" name="password" type="password" tabindex="2"/>
      </fieldset>
      <fieldset id="pt4">
      <input name="commit" type="submit" tabindex="3" <%="value='"+l(:field_login)+"'" %>/>
      </fieldset>
    </form>
  </div>
</div>
<div id="sidebar" align='left'>
	<br/>
  <h3><%= l(:login_label_1) %></h3>
  <h4><a href="/account/lost_password"><%= l(:login_label_2) %></a> <%= l(:login_label_3) %>  <br/><br/></h4>
<br/>
  <h3><%= l(:login_label_4) %></h3>
  <div class="help"><a href="/account/signup"><%= l(:login_label_5) %></a> <%= l(:login_label_6) %></div>
</div>
