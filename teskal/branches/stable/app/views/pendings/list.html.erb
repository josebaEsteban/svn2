<h1>Listing pendings</h1>

<table>
  <tr>
  <% for column in Pending.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for pending in @pendings %>
  <tr>
  <% for column in Pending.content_columns %>
    <td><%=h pending.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => pending %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => pending %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => pending }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @pending_pages.current.previous } if @pending_pages.current.previous %>
<%= link_to 'Next page', { :page => @pending_pages.current.next } if @pending_pages.current.next %> 

<br />

<%= link_to 'New pending', :action => 'new' %>
