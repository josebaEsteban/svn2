      <%- end -%>
      <%- if @books[14].browse -%>
      <li><a href="../lib/<%= l(:unit_15_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_15_path) %>');"><%= l(:unit_15_title) %></a></li>
      <%- end -%>
      <%- end -%>
    </ul>
    </p>
  </div>
  <div class='boxxbottom'>
    <div></div>
  </div>
</div>
<%- if @answers.length != 0 -%>
<%- TzTime.zone=@user.timezone -%>
<div class="splitcontentright">
  <table cellspacing="0">
    <thead>
      <tr>
        <th scope="col"><div align="left"><%=l(:label_filled) %></div></th>
        <th>##</th>
        <th scope="col"><div align="left"><%=l(:label_quest)%></div></th>
        <th scope="col"><div align="left"><%=l(:label_competition) %></div></th>
      </tr>
    </thead>
    <tbody>
      <%- odd=0 -%>
      <%- for answer in @answers -%>
      <%- if odd ==1 -%>
      <tr class="odd">
        <%- odd=0-%>
        <%-else -%>
      <tr>
        <%- odd=1 end -%>
        <%- controlador="quest"+ answer.quest_id.to_s -%>
     	<td><%= distance_of_time_in_words(TzTime.zone.utc_to_local(Time.now),TzTime.zone.utc_to_local(answer.created_on))%></td>
        <td> <%= answer.quest_id.to_s %></td>
        <%- if answer.browse -%>
        <td><%= link_to @titulo[answer.quest_id-1], :controller  => controlador, :action => 'show', :id => answer %></td>
        <%- else -%>
        <td><%= @titulo[answer.quest_id-1] %></td>
        <td></td>
        <%- end -%>
        <td><%= answer.competition %></td>
      </tr>
      <%- end -%>
    </tbody>
  </table>
</div>
<%- end -%>
