<%- content_for :header_tags do -%>
<%= stylesheet_link_tag "reset_form" -%>
<%- end -%>
<STYLE type="text/css">
.boxxq {max-width:38%;}
.boxxq a{color:#d42e12;font-weight:bold;text-decoration:none;background-color:inherit;background:none;}                              
</STYLE>
<div align="center">
  <div class='boxxq'>
    <div class='boxxqtop'>
      <div> </div>
    </div>
    <div class='boxxqcontent'>
      <form id="login" action="login"  method="post">
        <div class="title"><%=l(:label_please_login)%></div>
        <p></p>
        <h4></h4>
        <table cellspacing="0">
          <tbody>
            <tr>
              <td><label for="user"><%=l(:field_user)%></label></td>
              <td><input class="required" id="login" name="login"  size="25" type="text" tabindex="1"  /></td>
            </tr>
            <tr>
              <td><label for="password"><%=l(:field_password)%></label></td>
              <td><input class="required" id="password" name="password"  size="25" type="password" tabindex="2"/></td>
            </tr>
            <tr>
              <td></td>
              <td><div id="pt4">
                  <input name="commit" type="submit" tabindex="3" <%="value='"+l(:field_login)+"'" %>/>
                </div></td>
            </tr>
          </tbody>
        </table>
      </form>
      <h4></h4>
       <h3><%= l(:login_label_1) %></h3>
      <h4><a href="/account/lost_password"><%= l(:login_label_2) %></a> <%= l(:login_label_3) %> <br/>
        <br/>
      </h4>
       <h3><%= l(:login_label_4) %></h3>
      <div class="help"><a href="/account/signup"><%= l(:login_label_5) %></a> <%= l(:login_label_6) %></div>
      <br/>
    </div>
    <div class='boxxqbottom'>
      <div> </div>
    </div>
  </div>
</div>
