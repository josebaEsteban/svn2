<div class='boxx'>
  <div class='boxxtop'>
    <div></div>
  </div>
  <div class='boxxcontent'>
    <!-- Content goes here -->
    <%- if @logged_in_user.athlete? and @quests.length == 0 -%>
    <h4><%= l(:label_quest_no_pending) %></h4>
    <%- else -%>
    <p>
    <h3>
      <div align="left">
        <%- if @logged_in_user.athlete? -%>
        <%=l(:label_quest_pending)%>
        <%- else -%>
        <%=l(:label_quest_avail)%>
        <%- end -%>
      </div>
    </h3>
    <%- if @logged_in_user.athlete? -%>
    <ul>
      <%- i=0 -%>
      <%- for quest in @quests -%>
      <%- if quest.browse -%>
      <li>
        <%- controlador="quest"+quest.order.to_s -%>
        <%= link_to @titulo[i], :controller  => controlador, :action => 'new' %></li>
      <%- end -%>
      <%- i=i+1 -%>
      <%- end -%>
    </ul>
    <%- elsif @logged_in_user.show? -%>
    <%- else -%>
    <ul>
      <li><%= link_to @titulo[1], :controller  => 'quest2', :action => 'new' %></li>
      <li><%= link_to @titulo[11], :controller  => 'quest12', :action => 'new' %></li>
    </ul>
    <%- end -%>
    <%- end -%>
    </p>
    <p>
    <h3>
      <div align="left"><%=l(:label_library)%></div>
    </h3>
    <ul>
      <%- if @logged_in_user.suscription? -%>
      <%- if @books[0].browse -%>
      <li><a href="../lib/<%= l(:unit_1_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_1_path) %>');"><%= l(:unit_1_title) %></a></li>
      <%- end -%>
      <%- if @books[1].browse -%>
      <li><a href="../lib/<%= l(:unit_2_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_2_path) %>');"><%= l(:unit_2_title) %></a></li>
      <%- end -%>
      <%- if @books[2].browse -%>
      <li><a href="../lib/<%= l(:unit_3_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_3_path) %>');"><%= l(:unit_3_title) %></a></li>
      <%- end -%>
      <%- end -%>
      <%- if @logged_in_user.gratis? -%>
      <li><a href="../lib/<%= l(:unit_4_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_4_path) %>');"><%= l(:unit_4_title) %></a></li>
      <%- else -%>
      <%- if @books[3].browse -%>
      <li><a href="../lib/<%= l(:unit_4_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_4_path) %>');"><%= l(:unit_4_title) %></a></li>
      <%- end -%>
      <%- end -%>
      <%- if @logged_in_user.suscription? -%>
      <%- if @books[4].browse -%>
      <li><a href="../lib/<%= l(:unit_5_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_5_path) %>');"><%= l(:unit_5_title) %></a></li>
      <%- end -%>
      <%- if @books[5].browse -%>
      <li><a href="../lib/<%= l(:unit_6_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_6_path) %>');"><%= l(:unit_6_title) %></a></li>
      <%- end -%>
      <%- if @books[6].browse -%>
      <li><a href="../lib/<%= l(:unit_7_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_7_path) %>');"><%= l(:unit_7_title) %></a></li>
      <%- end -%>
      <%- if @books[7].browse -%>
      <li><a href="../lib/<%= l(:unit_8_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_8_path) %>');"><%= l(:unit_8_title) %></a></li>
      <%- end -%>
      <%- if @books[8].browse -%>
      <li><a href="../lib/<%= l(:unit_9_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_9_path) %>');"><%= l(:unit_9_title) %></a></li>
      <%- end -%>
      <%- if @books[9].browse -%>
      <li><a href="../lib/<%= l(:unit_10_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_10_path) %>');"><%= l(:unit_10_title) %></a></li>
      <%- end -%>
      <%- if @books[10].browse -%>
      <li><a href="../lib/<%= l(:unit_11_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_11_path) %>');"><%= l(:unit_11_title) %></a></li>
      <%- end -%>
      <%- if @books[11].browse -%>
      <li><a href="../lib/<%= l(:unit_12_path) %>" onClick="javascript:urchinTracker ('/lib/<%= l(:unit_12_path) %>');"><%= l(:unit_12_title) %></a></li>
